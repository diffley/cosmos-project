# Production Environment Overrides - Managed by Ansible

# Disable local development mode for production
# OPENC3_LOCAL_MODE=1

# Disable demo plugin for production
# OPENC3_DEMO=1

{% if cosmos_prod_registry is defined %}
# Production registry override
OPENC3_REGISTRY={{ cosmos_prod_registry }}
OPENC3_NAMESPACE={{ cosmos_prod_namespace | default('openc3inc') }}
{% endif %}

{% if cosmos_prod_tag is defined %}
# Production tag override
OPENC3_TAG={{ cosmos_prod_tag }}
{% endif %}

{% if cosmos_prod_bucket_url is defined %}
# Production bucket configuration
OPENC3_BUCKET_URL={{ cosmos_prod_bucket_url }}
{% endif %}